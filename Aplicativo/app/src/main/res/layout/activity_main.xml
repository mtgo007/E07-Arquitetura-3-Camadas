<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GUI.MainActivity">

    <Button
        android:id="@+id/btn_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="alunos" />

    <Button
        android:id="@+id/btn_professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_aluno"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="178dp"
        android:layout_marginTop="-46dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/btn_aluno"
        android:text="professores" />

    <Button
        android:id="@+id/btn_new_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_aluno"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="129dp"
        android:layout_toStartOf="@+id/btn_new_professor"
        android:text="novo aluno" />

    <Button
        android:id="@+id/btn_new_professor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_professor"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:text="novo professor" />

</RelativeLayout>